{
    "type": "object",
    "properties": {
        "Seed": {
            "type": "integer",
            "minimum": 0,
            "maximum": 2147483647
        },

        "Difficulty": {
            "type": "string",
            "enum": [
                "Standard",
                "Advanced"
            ],
            "default": "Advanced",
            "description": "Choose the game difficulty."
        },

        "StartLevel": {
            "type": "string",
            "oneOf": [
                {
                    "const": "Random",
                    "title": "Random"
                },
                {
                    "const": "OkunShrine",
                    "title": "Okun Shrine"
                },
                {
                    "const": "UndergroundCave",
                    "title": "Underground Cave"
                },
                {
                    "const": "LavaRuins",
                    "title": "Lava Ruins"
                },
                {
                    "const": "DarkTunnel",
                    "title": "Dark Tunnel"
                },
                {
                    "const": "SpiritRealm",
                    "title": "Spirit Realm"
                }
            ],
            "default": "Random"
        },
        "ShuffleExits": {
            "type": "boolean",
            "default": true
        },

        "GameTips": {
            "type": "boolean",
            "default": true,
            "description": "When enabled, in-game tips on the grounds will display tips to help complete the run: regions that are needed to complete the run, content of certain chests, ..."
        },

        "NoArcane": {
            "type": "boolean",
            "default": false,
            "description": "When this setting is enabled, Arcane magic will not be usable until it is found like any other magic."
        },
        "MagicUpgrade": {
            "type": "string",
            "oneOf": [
                {
                    "const": "Vanilla",
                    "title": "Vanilla"
                },
                {
                    "const": "BossKill",
                    "title": "Boss Kill"
                }
            ],
            "default": "Vanilla"
        },
        "BookAmount": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5,
            "default": 1,
            "description": "Sets the number of books of each magic type in the item pool when using Boss Kill magic upgrade mode. Getting duplicates of the same book won't upgrade them but it will make them easier to find."
        },

        "BossHunt": {
            "type": "boolean",
            "default": false,
            "description": "When enabled, it's needed to kill all bosses (including the one in Secret Passage, but not elites like the Seal) before being able to reach Nonota."
        },
        "MagicMaster": {
            "type": "boolean",
            "default": false,
            "description": "When enabled, it's needed to get all attack magics (arcane, ice, fire and thunder) to Lvl. Max (Lvl. 5) before being able to reach Nonota."
        },

        "TrialKeys": {
            "type": "boolean",
            "default": false,
            "description": "Enabling this setting will add trial keys in the item pool. Each trial needs one key to be activated, so to reach Nonota it is needed to find at least 3 keys."
        },
        "TrialKeysAmount": {
            "type": "integer",
            "minimum": 3,
            "maximum": 7,
            "default": 5
        },

        "OneHitKO": {
            "type": "boolean",
            "default": false,
            "description": "Nobeta instantly dies upon taking any damage."
        },
        "DoubleDamage": {
            "type": "boolean",
            "default": false,
            "description": "All damage Nobeta receives are doubled."
        },
        "HalfDamage": {
            "type": "boolean",
            "default": false,
            "description": "All damage Nobeta receives are halved."
        },

        "ChestSoulCount": {
            "type": "integer",
            "minimum": 50,
            "maximum": 2500,
            "default": 250,
            "description": "This is the amount of souls given for checks containing souls (chests, cat, ...). The souls in the item pool for checks can be disabled by setting a weight of 0 in 'Item Pool Weights' below for Souls."
        },

        "StartSoulsModifier": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 10.0,
            "default": 1.0,
            "description": "The amount of souls given scaling on start level will be multiplied by this modifier. So for example, if you set 0.5, only half of the souls will be given. 0 means no souls at all at the start."
        },

        "ItemWeightSouls": {
            "type": "integer",
            "minimum": 0,
            "maximum": 10,
            "default": 3
        },
        "ItemWeightHP": {
            "type": "integer",
            "minimum": 0,
            "maximum": 10,
            "default": 1
        },
        "ItemWeightMP": {
